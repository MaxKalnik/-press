.table--comparsion-worst
	width: 540px
	right: 0
	top: 364px
	background: linear-gradient(to right, #FF7D7C 0%, #FF6B89 100%)
	box-shadow: -1px 37px 43px -40px rgba(161, 20, 25, 0.5)
	td:nth-child(3)
		width: 40%
		font-size: 14px
		line-height: 16px

	.rate-block
		font-size: 12px

	&:before
		width: 46px
		height: 18px

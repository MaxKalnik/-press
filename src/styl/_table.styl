	.table__head
		font-size: 13px
		line-height: 22px
		font-weight: bold
		left: 72px

	.small__table
		tbody
			td
				border-top: 1px solid #E7E4E6
				border-bottom: 1px solid #E5EDF0
				&:first-child
					font-size: 12px
					line-height: 14px

				&:nth-child(2)
					width: 60%
					font-size: 14px
					line-height: 14px
					font-weight: bold
					color: #0A0602

			tr
				background-color: $color_white
				&:nth-child(even)
					background-color: #FFF5F4

		.rate-block
			&:first-child
				background-color: #FF696B

			&:nth-child(2)
				background-color: #FF6A76

			&:nth-child(3)
				background-color: #FF6B7C

			&:nth-child(4)
				background-color: #FF6B84

			&:nth-child(5)
				background-color: #FCF4F4

